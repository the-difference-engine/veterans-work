<h2>Company Registration</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<div class="row">
  <div class="col-sm-4">
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :address %><br />
      <%= f.text_field :address, autofocus: true, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :city %><br />
      <%= f.text_field :city, autofocus: true, class: "form-control"  %>
    </div>

    <div class="field">
      <%= f.label :state %><br />
      <%= f.text_field :state, autofocus: true, class: "form-control"  %>
    </div>

    <div class="field">
      <%= f.label :zip_code %><br />
      <%= f.text_field :zip_code, autofocus: true, class: "form-control"  %>
    </div>

    <div class="field">
      <%= f.label :phone %><br />
      <%= f.text_field :phone, autofocus: true, class: "form-control"  %>
    </div>
  </div>

  <div class="col-sm-4">
    <div class="field">
      <%= f.label :description %><br />
      <%= f.text_field :description, autofocus: true, class: "form-control"  %>
    </div>

    <div class="field">
      <%= f.label :website %><br />
      <%= f.text_field :url, autofocus: true, class: "form-control"  %>
    </div>

    <div class="field">
      <%= f.label "Service Radius (miles)" %><br />
      <%= f.number_field :service_radius, autofocus: true, class: "form-control"  %>
    </div>

    <div class="file">
        <%= f.label :avatar %>
        <%= f.file_field :avatar %>
    </div>

  <div><strong>Service Categories Offered</strong>
    <% @service_categories.each do |service_category| %>

    <div class="form-check">
        <%= check_box_tag 'service_category[]', service_category.id, checked = false %> <%= service_category.name %>
    <% end %>
  </div>

  </div>

</div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn-md btn btn-success"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
