<div class="col-xs-6 col-xs-offset-3">
  <%= form_for @order, class: 'form-inline' do |f| %>
    <div class="col-xs-12">
      <div class="row">
        <div class="col-xs-3">
          <div class="form-group">
            <%= f.label :quantity %>
            <%= f.number_field :quantity, class: 'form-control' %>
          </div>
        </div>

        <div class="col-xs-3">
          <div class="form-group">
            <%= f.label :first_name, 'First Name' %>
            <%= f.text_field :first_name, class: 'form-control' %>
          </div>
          
        </div>
        <div class="col-xs-3">
          <div class="form-group">
            <%= f.label :last_name, 'Last Name' %>
            <%= f.text_field :last_name, class: 'form-control' %>
          </div>
          
        </div>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :credit_card_number, 'Credit Card Number' %>
      <%= f.number_field :credit_card_number, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :security_code, 'Security Code' %>
      <%= f.number_field :security_code, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :exp_date, 'Expiration Date' %>
      <%= f.text_field :exp_date, class: 'form-control' %>
    </div>
  <% end %>
</div>



