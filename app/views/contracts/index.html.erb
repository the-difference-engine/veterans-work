<h1>My Contracts</h1>
<div class="row">
  <div class="col-sm-6">
    <h3>Active Contracts</h3>
    <table class="table table-hover table-responsive">
      <thead class="thead-inverse">
        <tr>
          <th></th>
          <th>Customer Request</th>
          <th>Estimated Completion Date</th>
        </tr>
      </thead>
      <tbody>
        <% @active_contracts.each do |contract| %>
          <tr>
            <td><a href="/contracts/<%= contract.id %>">view</td>
            <td><%= contract.customer_request.description %></td>
            <td><%= contract.quote.completion_date_estimate.strftime('%a, %e %b %Y') %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-sm-6">
    <h3>Completed Contracts</h3>
    <table class="table table-hover">
      <thead class="thead-inverse">
        <tr>
          <th></th>
          <th>Customer Request</th>
          <th>Completion Date</th>
        </tr>
      </thead>
      <tbody>
        <% @completed_contracts.each do |contract| %>
          <tr>
            <td><a href="/contracts/<%= contract.id %>">view</td>
            <td><%= contract.customer_request.description %></td>
            <td><%= contract.completion_date.strftime('%a, %e %b %Y') %></td>
          </tr>
         <% end %>
      </tbody>
    </table>
  </div>
</div>
